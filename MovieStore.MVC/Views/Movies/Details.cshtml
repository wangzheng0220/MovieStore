@model MovieStore.Core.Entities.Movie

    <div>
        <div class="container-fluid">
            <div class="row">

                @*<partial name="_MovieCard" model="movie" />*@
                @*@await Html.PartialAsync("_MovieCard", Model)*@
                <div class="col-sm">
                    <a>
                        <img src="@Model.PosterUrl" class="img-fluid" alt="@Model.Title" />

                    Box Office <span class="badge badge-pill badge-dark">$ @Model.Revenue</span><br /> 
                    Budget<span class="badge badge-pill badge-dark">$ @Model.Budget</span><br />
                     
                </div>

                <div class="col-sm">
                    @Model.Title <br/>
                    @Model.Tagline <br/>
                    <span class="badge badge-pill badge-dark">Run Time</span>
                    @Model.RunTime m <br />
                    <span class="badge badge-warning">@Model.Rating</span><br />
                    @Model.Overview <br />
                    CAST
                    @foreach (var castInfo in Model.MovieCasts)
                    {

                        <p>
                            @await Html.PartialAsync("_CastCard", castInfo.Cast) @*CastID为1的那一条infomation*@
                            <a href="@castInfo.Cast.TmdbUrl">@castInfo.Cast.Name</a>

                            @castInfo.Character @*Character Name*@
                            @castInfo.Cast.Id

                        </p>
                    }
                </div>
                
       
            
